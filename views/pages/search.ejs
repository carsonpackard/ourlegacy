<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">
<style>
  ul {
    list-style-type: none;
}
.result{
  margin-left: 2%;
  font-size: x-large;
  font-weight: bolder;
  color: rgb(37, 132, 234);
  width: 100%;
  overflow:hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  display: inline-block;
}

.subtitle{
  margin-left: 23%;
  display: list-item;
}

a:hover{
  color: black;
  text-decoration: none;
  
}
a {
  color: black;
  text-decoration: none;
  
}
.info{
  display: block;
  max-width:150px;
  max-height:100px;
  width: auto;
  height: auto;
  display:inline-block;
}

</style>
<header>
  <%- include('../partials/header'); %>
</header>

<main>
  <div class="jumbotron">
    <a href="/">Back</a>
    <h2>Results</h2>
    <div id="scroll" class="scroll" style="width:100%;height:100%;">
      <ul>
        <% for (var i = 0; i < results.length; i++) {%>
          <li class="result" style="margin-top: 5%">
            <a  href="/media/<%= results[i].media._id%>" width="100%"> 
              <div>
                <object class="info" data="/images/<%= results[i].media.thumbnail%>" type="image/png" >
                  <img class="info" src="/images/default.jpg" >
                </object>
                <div class="result" > <%= results[i].media.title%></div>
              </div>
            </a>
          </li>
            <% results[i].subtitles.forEach(function(subtitle){ %>
              <a class="subtitle" href="/media/<%= results[i].media._id%>?t=<%= subtitle.start /1000%>"> 
                  <% if( (subtitle.start / 1000) < 3600){ %>
                      <%= new Date(subtitle.start).toISOString().substring(14, 19) %>
                  <% } else{ %>  
                          <%= new Date(subtitle.start).toISOString().substring(11, 16) %>
                  <% } %>  : <%=subtitle.text%>
              </a>
          <% }); %>
        <% } %>
      </ul>
    </div>
  </div>
</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>
